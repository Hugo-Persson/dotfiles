{
  "permissions": {
    "deny": [
      "Read(.env)",
      "Read(**/.env*)",
      "Read(**/.secret*)",
      "Read(**/env*)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(**/*.crt)",
      "Read(**/*.cert)",
      "Read(**/secrets/**)",
      "Read(**/node_modules/**)",
      "Read(**/credentials/**)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/hugo/.claude/claude-notification.fish"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/hugo/.claude/claude-notification.fish"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "pnpx  @owloops/claude-powerline@latest --style=powerline"
  },
  "alwaysThinkingEnabled": true
}
